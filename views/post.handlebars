            <div class="thumbnail" id="{{category}}">
                <div class="caption" style="background-color: white;">
                    <h3>{{title}}</h3>
                        <p class="flex-text text-muted">{{description}}</p>
                    <div class="card-img-bottom" style=" color: #fff; height: 20rem; background: url(../uploads/{{image_path}}) center no-repeat; background-size: cover;">
                    </div>
                    <p class="flex-text text-muted">{{category}}</p>

                </div>
                <!-- /.caption -->
            </div>
            <!-- /.thumbnail -->
        </div>
        </a>
{{/posts}}

