<div class="row" class="container-fluid" style="padding-top:20px;">
    <div id="category1" class="col-md-2">Bbq</div>
    <div id="category2" class="col-md-2">Pasta</div>
    <div id="category3" class="col-md-2">Pub</div>
    <div id="category4" class="col-md-2">Smoothies</div>
    <div id="category5" class="col-md-2">Baking</div>
    <div id="category6" class="col-md-2">Dessert</div>
</div>

<h4>
    Featured
    <select onselect="" id="featured">
        <option value="today">Today</option>
        <option value="week">Week</option>
        <option value="month">Month</option>
        <option value="year">Year</option>
    </select>
</h4>
<hr>


<div class="container container-table" >
    <div class="row vertical-center-row">
        {{#posts}}
            <a href="/showPost/{{post_id}}" style="color: inherit;">
                <div class="col-sm-6"  style="width: 15em; padding-top: 5em">
                    <div class="card-deck" style="width: 20rem;">
                        <div class="card-block" style="background-color: white; box-shadow: 3px 3px 3px #888888;">
                            <img class="card-img-top" src="../images/image.png" alt="Card image cap" height="200px" width="200px">
                            <div class="card-block">
                                <h4 class="card-title" style="padding-left: 3px;">{{post_title}}</h4>
                                <p class="card-text" style="padding-left: 3px;">{{post_description}}</p>
                                <p class="card-text" style="padding-left: 3px;">{{post_category}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        {{/posts}}
    </div>
</div>